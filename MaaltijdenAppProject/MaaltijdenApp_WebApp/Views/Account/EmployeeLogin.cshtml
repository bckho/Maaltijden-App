@model AccountLogin
@{
    ViewData["Title"] = "EmployeeLogin";
}

<div class="text-danger" asp-validation-summary="All"></div>

<div class="col">
    <h2>Inloggen medewerker</h2>
    <div class="row justify-content-center">
        <div class="card-login">
            <form asp-action="EmployeeLogin" asp-controller="Account" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" class="form-control" placeholder="Email adres" asp-for="Email">
                </div>
                <div class="form-group">
                    <label asp-for="Password">Wachtwoord</label>
                    <input type="password" class="form-control" placeholder="Wachtwoord" asp-for="Password">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Log in</button>
                </div>
            </form>
        </div>
    </div>
</div>

