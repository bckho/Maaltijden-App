@model ProductCreate
@{
    ViewData["title"] = "Nieuwe product aanmaken";
}

<div>
    <h1>Nieuwe product aanmaken</h1>

    <a asp-action="Index" asp-controller="Product">Terug naar overzicht</a>

    <div class="mt-2">
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>

    <div class="row justify-content-center">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" asp-controller="Product" method="post">
                    <div class="mt-3">
                        <h3></h3>
                        <div class="form-group">
                            <label asp-for="Name">Naam</label>
                            <input type="text" class="form-control" placeholder="Verplicht" asp-for="Name" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Korte omschrijving</label>
                            <textarea class="form-control" placeholder="Geef een korte omschrijving van het product..." asp-for="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContainsAlcohol">Bevat alcohol?</label>
                            <select asp-for="ContainsAlcohol">
                                <option selected="selected" value="false">Nee</option>
                                <option value="true">Ja</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image">Afbeelding toevoegen</label>
                            <input type="file" asp-for="Image" />
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Aanmaken</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
